@inherits LayoutComponentBase


<div class="page">

    <div class="sidebar">
        <NavMenu />
    </div>

    <main>


        <div class="top-row px-4 fixed-top">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>

    </main>

    
</div>

<footer class="footer px-4 bg-light py-1 d-flex justify-content-between align-items-center fixed-bottom bottom-0">
    
    <!-- Left side: Current Date -->
    <div id="currentDate"></div>

    <!-- Right side: Links -->
    <div>
        <span class="fst-italic me-2">Crafted By:</span>
        
        <a href="https://www.linkedin.com/in/allanalexodhiambo/" class="footer-link">
            Allan O. Alex
        </a>
    </div>
</footer>


<div id="blazor-error-ui" class="row">
    <div class="col my-1">
        <div class="alert alert-danger" role="alert">
            An unhandled error has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </div>
</div>

